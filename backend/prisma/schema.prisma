generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

/// Role enum removed for SQLite compatibility - use a plain string with default.
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("READER") // possible values: READER, EDITOR, ADMIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  articles  Article[]

  @@map("users")
}

model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  slug      String    @unique
  articles  Article[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("categories")
}

model Article {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  subtitle    String?
  content     String   // Markdown or HTML
  imageUrl    String?
  published   Boolean  @default(false)
  
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  
  tags        Tag[]
  
  views       Int      @default(0)
  readTime    String?
  
  // AI fields
  summary     String?   // TL;DR generated by LLM

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("articles")
  @@index([slug])
  @@index([published])
}

model Tag {
  id        String    @id @default(uuid())
  name      String    @unique
  articles  Article[]
  createdAt DateTime  @default(now())

  @@map("tags")
}
